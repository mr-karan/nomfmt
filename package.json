{
  "name": "nomfmt",
  "displayName": "nomfmt",
  "description": "Format Hashicorp Nomad job specs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "nomfmt configuration",
      "properties": {
        "nomfmt.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable nomfmt formatting."
        }
      }
    },
    "languages": [
      {
        "id": "hcl",
        "extensions": [
          ".nomad",
          ".nomad.hcl"
        ]
      }
    ],
    "documentFormattingEditProvider": [
      {
        "scheme": "file",
        "pattern": "**/*.{nomad,nomad.hcl}"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mr-karan/vscode-nomfmt.git"
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}